#!/bin/env bash
menu=( \
    books \
    firefox \
    dia \
    gimp \
    mixes \
    obsidian \
    soundcards \
    tracks \
    wifi \
    wireshark \
    zathura \
)

choice=$(for c in "${menu[@]}"; do printf "%s\n" $c; done | sort -u | fzf)

case "$choice" in
    books)
        DIR=$HOME/files/books
        FILE="$DIR/"$(cd $DIR && find . -type f | fzf)
        if [ -f "$FILE" ]; then
            setsid swaymsg -t command exec "zathura $FILE";
        fi
        ;;
    mixes)
        DIR=$HOME/files/media/mix
        FILE="$DIR/"$(cd $DIR && find . -type f | fzf)
        exec mpv --no-video $FILE
        ;;
    soundcards)
        cat /proc/asound/modules
        read -n 1 -p ... 
        ;;
    tracks)
        exec mpv --shuffle --no-video $HOME/files/media/tracks
        ;;
    wifi)
        exec nmtui
        ;;
    *)
        setsid swaymsg -t command exec "$choice"
        ;;
esac
