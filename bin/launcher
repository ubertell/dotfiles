#!/bin/env bash
menu=( \
	books \
    firefox \
    mixes \
    obsidian \
    soundcards \
    tracks \
    wifi \
    terminal \
)

choice=$(for c in "${menu[@]}"; do printf "%s\n" $c; done | sort -u | fzf)
if [ $? = 0 ]; then
    case "$choice" in
        books)
            DIR=$HOME/fil/books
            FILE="$DIR/"$(cd $DIR && find . -type f | fzf)
            if [ -f "$FILE" ]; then
                setsid swaymsg -t command exec "zathura $FILE";
            fi
            ;;
        mixes)
            DIR=$HOME/fil/music/mixes
            FILE="$DIR/"$(cd $DIR && find . -type f | fzf)
            mpv --no-video $FILE
            ;;
        soundcards)
            cat /proc/asound/modules
            read -n 1 -p ...
            ;;
        tracks)
            mpv --shuffle --no-video $HOME/fil/music/tracks/{2020,2021}
            ;;
        wifi)
            iwctl
            ;;
        terminal)
            setsid swaymsg -t command exec \
                "alacritty --config-file $HOME/.config/alacritty/alacritty.light.yml";
            ;;
        *)
            setsid swaymsg -t command exec "$choice"
            ;;
    esac
fi
